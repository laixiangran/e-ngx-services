{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noEmitHelpers": false,
		"noImplicitAny": false,
		"sourceMap": true,
		"declaration": true,
		"rootDir": "src",
		"outDir": "dist",
		"lib": [
			"es6",
			"dom"
		],
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"files": [
		"src/index.ts"
	],
	"exclude": [
		"src/assets",
		"node_modules",
		"example"
	],
	"angularCompilerOptions": {
		"genDir": "./temp/factories"
	}
}
